<MudDialog>
    <DialogContent>
        @Body
    </DialogContent>
    @* <DialogActions>
        <MudButton OnClick="CloseDialog">Close</MudButton>
    </DialogActions> *@
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance dialogRef { get; set; } = default!;
    [Parameter] public RenderFragment Body { get; set; } = default!;

    private void CloseDialog()
    {
        dialogRef.Close(DialogResult.Cancel());
    }
}