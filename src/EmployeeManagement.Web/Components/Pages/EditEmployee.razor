@page "/editemployee/{id}"
@rendermode InteractiveServer

<h3>EditEmployee</h3>
<EditForm Model="@Employee">
    <div class="row form-group mb-2">
        <div class="col-md-2">
            <label class="form-label">First Name</label>
        </div>
        <div class="col-md-10">
            <InputText @bind-Value="Employee.FirstName" class="form-control" placeholder="First Name"></InputText>
        </div>
    </div>
    <div class="row form-group mb-2">
        <div class="col-md-2">
            <label class="form-label">Last Name</label>
        </div>
        <div class="col-md-10">
            <InputText @bind-Value="Employee.LastName" class="form-control" placeholder="First Name"></InputText>
        </div>
    </div>
    <div class="row form-group mb-2">
        <div class="col-md-2">
            <label class="form-label">Date of Birth</label>
        </div>
        <div class="col-md-10">
            <InputDate @bind-Value="Employee.DoB" class="form-control"></InputDate>
        </div>
    </div>
    <div class="row form-group mb-2">
        <div class="col-md-2">
            <label class="form-label">Email</label>
        </div>
        <div class="col-md-10">
            <InputText @bind-Value="Employee.Email" class="form-control" placeholder="Email"></InputText>
        </div>
    </div>
    <div class="row form-group mb-2">
        <div class="col-md-2">
            <label class="form-label">Gender</label>
        </div>
        <div class="col-md-10">
            <InputSelect @bind-Value="Gender" class="form-control">
                <option value="0">Choose Option</option>
                <option value="1">Male</option>
                <option value="2">Female</option>
            </InputSelect>
        </div>
    </div>
    <div class="row form-group mb-2">
        <div class="col-md-2">
            <label class="form-label">Department</label>
        </div>
        <div class="col-md-10">
            <InputSelect @bind-Value="DepartmentId" class="form-control">
                @foreach (var item in Departments)
                {
                    <option value="@item.Id">@item.DepartmentName</option>
                }
            </InputSelect>
        </div>
    </div>
</EditForm>
